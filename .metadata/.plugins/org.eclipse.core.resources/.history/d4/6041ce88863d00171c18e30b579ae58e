	@Override
	public void atualizar(Usuario usuario, int a) throws SQLException {
		Connection con = new ConnectionFactory().getConnectionJDBC();

		PreparedStatement stmt = null;
		Scanner teclado = new Scanner(System.in);
		try {
			switch (a) {
			case 1:
				stmt = con
						.prepareStatement("update usuario set nome = ? where id_usuario = ?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setString(1, usuario.getNome());
				stmt.execute();
				break;
			case 2:
				stmt = con
						.prepareStatement("update usuario set email = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setString(1, usuario.getEmail());
				stmt.execute();
				break;
			case 3:
				stmt = con
						.prepareStatement("update usuario set logradouro = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setString(1, usuario.getLogradouro());
				stmt.execute();
				break;
			case 4:
				stmt = con
						.prepareStatement("update usuario set data_nascimento = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setDate(1, new java.sql.Date(usuario.getdataNascimento()
						.getTimeInMillis()));
				stmt.execute();
				break;
			case 5:
				stmt = con
						.prepareStatement("update usuario set numero = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setInt(1, usuario.getNumero());
				stmt.execute();
				break;
			case 6:
				stmt = con
						.prepareStatement("update usuario set cep = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setInt(1, usuario.getCep());
				stmt.execute();
				break;
			case 7:
				stmt = con
						.prepareStatement("update usuario set bairro = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setString(1, usuario.getBairro());
				stmt.execute();
				break;
			case 8:
				stmt = con
						.prepareStatement("update usuario set sexo = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setString(1, usuario.getSexo());
				stmt.execute();
				break;
			case 9:
				stmt = con
						.prepareStatement("update usuario set senha = ? where id_usuario=?");
				stmt.setLong(2, usuario.getIdUsuario());
				stmt.setString(1, usuario.getSenha());
				stmt.execute();
				break;

			}

		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			stmt.close();
			con.close();
		}

	}

	@Override
	public Object buscarEspecifica(Usuario usuario, int a) throws SQLException {
		Connection con = new ConnectionFactory().getConnectionJDBC();

		PreparedStatement stmt = null;
		Scanner teclado = new Scanner(System.in);
		ResultSet rs = null;
		try {
			switch (a) {
			case 0:
				stmt = con
						.prepareStatement("select * from usuario where id_usuario = ?");
				stmt.setLong(1, usuario.getIdUsuario());
				rs = stmt.executeQuery();
				break;
			case 1:
				stmt = con
						.prepareStatement("select * from usuario where nome = ?");
				stmt.setString(1, usuario.getNome());
				rs = stmt.executeQuery();
				break;
			case 2:
				stmt = con
						.prepareStatement("select * from usuario where email = ?");
				stmt.setString(1, usuario.getEmail());
				rs = stmt.executeQuery();
				break;
			case 3:
				stmt = con
						.prepareStatement("select * from usuario where logradouro = ?");
				stmt.setString(1, usuario.getLogradouro());
				rs = stmt.executeQuery();
				break;
			case 4:
				stmt = con
						.prepareStatement("select * from usuario where data_nascimento = ?");
				stmt.setDate(1, new java.sql.Date(usuario.getdataNascimento()
						.getTimeInMillis()));
				rs = stmt.executeQuery();
				break;
			case 5:
				stmt = con
						.prepareStatement("select * from usuario where numero = ?");
				stmt.setInt(1, usuario.getNumero());
				rs = stmt.executeQuery();
				break;
			case 6:
				stmt = con
						.prepareStatement("select * from usuario where cep = ?");
				stmt.setInt(1, usuario.getCep());
				rs = stmt.executeQuery();
				break;
			case 7:
				stmt = con
						.prepareStatement("select * from usuario where bairro = ?");
				stmt.setString(1, usuario.getBairro());
				rs = stmt.executeQuery();
				break;
			case 8:
				stmt = con
						.prepareStatement("select * from usuario where sexo = ?");
				stmt.setString(1, usuario.getSexo());
				rs = stmt.executeQuery();
				break;
			case 9:
				stmt = con
						.prepareStatement("select * from  usuario where senha = ?");
				stmt.setString(1, usuario.getSenha());
				rs = stmt.executeQuery();
				break;

			}
			usuario.setIdUsuario(rs.getLong("id_usuario"));
			usuario.setBairro(rs.getString("bairro"));
			usuario.setCep(rs.getInt("cep"));
			usuario.getdataNascimento()
					.setTime((rs.getDate("data_nascimento")));
			usuario.setEmail(rs.getString("email"));
			usuario.setLogradouro(rs.getString("logradouro"));
			usuario.setSenha(rs.getString("senha"));
			usuario.setSexo(rs.getString("sexo"));
			usuario.setNome(rs.getString("nome"));
			usuario.setNumero(rs.getInt("numero"));

		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			stmt.close();
			con.close();
		}
		return usuario;
	}

	@Override
	public void remover(Usuario usuario) throws SQLException {
		Connection con = new ConnectionFactory().getConnectionJDBC();
		PreparedStatement stmt = con
				.prepareStatement("delete from usuario where id_usuario=?");
		try {
			stmt.setLong(1, usuario.getIdUsuario());
			stmt.execute();

		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			con.close();
			stmt.close();
		}

	}
}
