package br.com.dog.model.dao;

import java.sql.SQLException;
import java.util.List;

import br.com.dog.model.entity.Usuario;

public interface UsuarioDAO {

	// Create
	public void adicionar(Usuario usuario) throws SQLException;

	// ReadAll
	public List<Object> buscarTodos() throws SQLException;

	// DeleteAll
	public void removerTodos() throws SQLException;

	// Update
	public void atualizar(Usuario usuario,int a) throws SQLException;

	// Read especifico
	public Object buscarEspecifica(Usuario usuario, int a) throws SQLException;

	// Delete per id
	public void remover(Usuario usuario) throws SQLException;
}
